{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <div>
        <a href="{{ path('wild_show', { 'slug': "walking-dead" }) }}">
            Testing show() method from WildController with a real program s slug.
        </a>
        <br>
        <a href="{{ path('show_category', { 'categoryName': "horreur" }) }}">
            Testing showByCategory() method from WildController to view all programs in a category.
        </a>
        <br>
        <a href="{{ path('program_show', { 'slug': "walking-dead" }) }}">
            Testing showByProgram() method from WildController to view all seasons in a program.
        </a>
    </div>
    <h2>Toutes les séries de la table program : </h2>

    {% for program in programs %}
        <div>
            <h3>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h3>
            <p>{{ program.summary }}</p>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
    <br>
    {# templates/index.html.twig #}

{% endblock %}
